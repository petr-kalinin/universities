template(name='navigation')
    .container
        nav.navbar.navbar-default
            .container-fluid
                .navbar-header
                    a.navbar-brand(href="/") Обзор университетов
                #navbar
                    ul.nav.navbar-nav
                        li(class='{{isActive "university" null}}')
                            a(href="/university") Университеты
                        if currentUniversity
                            li(class="{{currentUniversity.active}}")
                                a(href="/university/{{currentUniversity.univ._id}}") 
                                    =currentUniversity.univ.name
                        li(class='dropdown {{currentUniversity.active}}')
                            a(href="",class="dropdown-toggle",data-toggle="dropdown",role="button",aria-expanded="false")
                                span.caret
                            ul.dropdown-menu(role=menu)
                                +each universities
                                    li(class='{{isActive "university" _id}}')
                                        a(href="/university/{{_id}}")
                                            =name
                        li(class='{{isActive "reviews" null}}')
                            a(href="/reviews") Последние отзывы
                    .nav.navbar-right 
                        ul.nav.navbar-nav
                            li
                                +user currentUser
                        p.navbar-login.navbar-text
                            +loginButtons
                    
    