template(name='categoryInUniversity')
    li.list-group-item
        .h3
            =category.name
            small
                =category.comment
            a(role="button",title="{{collapseTitle}}").collapse
                span(class="glyphicon glyphicon-chevron-{{collapseButtonDirection}}")
        unless collapsed
            ul.list-group
                +each subCategory
                    +categoryInUniversity category=this university=../university
                if isLeaf
                    +each reviews
                        +review review=this
                    if canCreate
                        +addReview
