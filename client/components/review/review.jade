template(name='review')
    li.list-group-item
        .review
            .text
                +markdownStub review.text
            span.signature
                +user review.getAuthor
                if showAll
                    | , 
                    =categoryName
                    | , 
                    a(href="/university/{{university._id}}")
                        =universityName
                    | , 
                =formattedCreatedDate
                if review.canRemove
                    button.close.remove(title="Удалить") &times;
